<% include ./partials/header %>

<div class="container">
    <div class="row">
         <h1 class="text-center">Please Choose a Date</h1>
         <!--Styled to center the form-->
         <div style="width: 30%; margin: 3% auto;">
             <form method="POST" action="/campgrounds/<%= val._id %>/book">
                 <!-- For spacing b/w the form elements we use class="form-group" -->
                 <div class="form-group">
                      <input type="date" name="date" placeholder="text" class="form-control" id="dateField" min="2014-01-01" >
                      <!--<input type="text" name="date" placeholder="text" class="form-control">-->
                      <!--<div class="input-group date" id="datetimepicker">-->
                      <!--    <input type="text" class="form-control" />	<span class="input-group-addon"><span class="glyphicon-calendar glyphicon"></span></span>-->
                      <!--</div>-->
                 </div>
                 <div class="form-group">
                     <button class="btn btn-lg btn-info btn-block">Submit</button>
                 </div>
             </form>
             <p>
                 <!--class="btn-block" just takes the size of the parent element-->
                 <a class="btn btn-lg btn-danger btn-block" href="/campgrounds">Go Back</a>
             </p>
         </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment-with-locales.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script>
    var today = new Date().toISOString().split('T')[0];
    document.getElementsByName("date")[0].setAttribute('min', today);
</script>
<% include ./partials/footer %>