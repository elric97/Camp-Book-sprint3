<% include ../partials/header %>

<div class="container">
    <div class="row">
         <h1 class="text-center">Edit<%= campground.name %></h1>
         <!--Styled to center the form-->
         <div style="width: 30%; margin: 3% auto;">
             <form method="POST" action="/campgrounds/<%= campground._id%>?_method=PUT">
                 <!-- For spacing b/w the form elements we use class="form-group" -->
                 <div class="form-group">
                     <label for="name">Name</label>
                     <input type="text" name="camp[name]" placeholder="Site name" class="form-control" value=<%= campground.name %>>
                 </div>
                 <div class="form-group">
                     <label for="image">Image</label>
                     <input type="text" name="camp[image]" placeholder="image url" class="form-control" value=<%= campground.image %>>
                 </div>
                 <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" name="camp[cost]" id="cost" value="<%= campground.cost %>" step="0.01" min="0" required>
                </div>
                 <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="camp[location]" id="location" value="<%= campground.location %>">
                </div>
    
                 <div class="form-group">
                     <label for="Description">Description</label>
                      <input type="text" name="camp[description]" placeholder="description" class="form-control" value="<%= campground.description %>">
                 </div>
                 <div class="form-group">
                     <button class="btn btn-lg btn-success btn-block">Submit</button>
                 </div>
             </form>
             <p>
                 <!--class="btn-block" just takes the size of the parent element-->
                 <a class="btn btn-lg btn-danger btn-block" href="/campgrounds">Go Back</a>
             </p>
         </div>
    </div>
</div>
 
<% include ../partials/footer %>